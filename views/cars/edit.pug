extends ../base.pug
block content
    h1 edit page

    form(action=`/drivers/${car.driver}/cars/${car.id}?_method=PATCH` method="POST")
        p
          label(for="make") Make &nbsp;
          input(type="text", name="make" id="make", value=car.make)
        p
          label(for="model") Model &nbsp;
          input(type="text", name="model" id="model", value=car.model)
        p
          label(for="year") Year &nbsp;
          input(type="number", name="year" id="year", value=car.year)
        p
          button Update this car

    form(action=`/drivers/${car.driver}/cars/${car.id}?_method=DELETE` method="POST")

        button Kill this car
